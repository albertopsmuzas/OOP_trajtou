F = ifort
CF = $(F) -cpp -I mod -module mod -c -O2 -traceback -CB -gen-interfaces -warn truncated-source -g
LF = $(F) -cpp -I mod -O2 -g

# Some paths to find files
vpath %.f90 jobs
vpath %.a lib

# General rules

%.x: %.o libtrajtou.a
	$(LF) -o bin/$@ bin/$< lib/libtrajtou.a lib/libaotus.a

%.o: %.f90
	$(CF) $< -o bin/$@
