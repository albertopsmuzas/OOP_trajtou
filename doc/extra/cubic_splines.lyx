\end_inset


\end_layout

\begin_layout Standard
using the definition of 
\begin_inset Formula $c_{i}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{y_{2}-y_{1}}{h_{1}}-\frac{M_{2}+2M_{1}}{6}h_{1}=\beta\,\Rightarrow\,\frac{M_{2}+2M_{1}}{6}h_{1}=\frac{y_{2}-y_{1}}{h_{1}}-\beta$
\end_inset


\end_layout

