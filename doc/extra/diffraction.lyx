\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $\underline{s_{j}}_{\mathcal{S}}$
\end_inset

 are basis vectors defined in their natural representations: 
\begin_inset Formula $\underline{k_{1}}_{\mathcal{G}}=\begin{pmatrix}1\\
0
\end{pmatrix}=\underline{s_{1}}_{\mathcal{S}}$
\end_inset

 and 
\begin_inset Formula $\underline{k_{2}}_{\mathcal{G}}=\begin{pmatrix}0\\
1
\end{pmatrix}=\underline{s_{2}}_{\mathcal{S}}$
\end_inset

.
\end_layout

\begin_layout Standard
Thus, Eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:reciprocal space"

\end_inset

 can be simplified to:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\underline{k_{i}}_{\mathcal{G}}^{T}\cdot\left(\underline{\underline{K_{aux}}}^{T}\cdot\underline{\underline{S_{aux}}}\right)\cdot\underline{s_{j}}_{\mathcal{S}}=2\pi\delta_{ij}\,\Rightarrow\underline{\underline{K_{aux}}}^{T}\cdot\underline{\underline{S_{aux}}}=2\pi\mathds1,
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\mathds1$
\end_inset

 is a 2x2 identity matrix.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\underline{\underline{K_{aux}}}=2\pi\cdot\left(\underline{\underline{S_{aux}}}^{-1}\right)^{T}=\frac{2\pi}{ab\sin\gamma}\cdot\begin{pmatrix}b\sin\gamma & 0\\
-b\cos\gamma & a
\end{pmatrix}\label{eq:definition Kaux}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\det{\underline{\underline{K_{aux}}}}=\det{\left\{ 2\pi\cdot\left(\underline{\underline{S_{aux}}}^{-1}\right)^{T}\right\} }=\left(2\pi\right)^{2}\cdot\det{\underline{\underline{S_{aux}}}^{-1}}=\frac{\left(2\pi\right)^{2}}{\det{\underline{\underline{S_{aux}}}}}=\frac{4\pi^{2}}{ab\sin\gamma}
\]

\end_inset


\end_layout

\begin_layout Standard
Now let's get the inverse of 
\begin_inset Formula $\underline{\underline{K_{aux}}}$
\end_inset

 using the definition in Eq.
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:definition Kaux"

\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\underline{\underline{K_{aux}}}^{-1}=\frac{1}{\det{\underline{\underline{K_{aux}}}}}\cdot\left(\underline{\underline{K_{aux}}}^{*}\right)^{T}=\frac{\det{\underline{\underline{S_{aux}}}}}{\left(2\pi\right)^{2}}\cdot\left\{ \left\{ 2\pi\cdot\left(\underline{\underline{S_{aux}}}^{-1}\right)^{T}\right\} ^{*}\right\} ^{T}=\frac{\det{\underline{\underline{S_{aux}}}}}{2\pi}\cdot\left\{ \left\{ \left(\frac{1}{\det{\underline{\underline{S_{aux}}}}}\cdot\left(\underline{\underline{S_{aux}}}^{*}\right)^{T}\right)^{T}\right\} ^{*}\right\} ^{T}=
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\frac{1}{2\pi}\cdot\left\{ \left\{ \left(\underline{\underline{S_{aux}}}^{*}\right)\right\} ^{*}\right\} ^{T}=\frac{1}{2\pi}\cdot\left\{ \underline{\underline{S_{aux}}}\right\} ^{T}=\frac{1}{2\pi}\cdot\underline{\underline{S_{aux}}}^{T}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\underline{\underline{K_{aux}}}^{-1}=\frac{1}{2\pi}\cdot\underline{\underline{S_{aux}}}^{T}=\frac{1}{2\pi}\cdot\begin{pmatrix}a & 0\\
b\cos\gamma & b\sin\gamma
\end{pmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
By definition, matrix 
\begin_inset Formula $\underline{\underline{K_{aux}}}$
\end_inset

 is built with the basis vectors representations deployed in columns, therefore,
 we can deduce 
\begin_inset Formula $\underline{k_{i}}_{\mathcal{A}}$
\end_inset

 from it:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\underline{k_{1}}_{\mathcal{A}}=\frac{2\pi}{a\sin(\gamma)}\cdot\begin{pmatrix}\sin(\gamma)\\
-\cos(\gamma)
\end{pmatrix},\,\,\,\underline{k_{2}}_{\mathcal{A}}=\frac{2\pi}{b\sin(\gamma)}\cdot\begin{pmatrix}0\\
1
\end{pmatrix}
\]

\end_inset

notice that: 
\begin_inset Formula $\underline{v_{\mathcal{A}}}=\underline{\underline{K_{aux}}}\underline{v_{\mathcal{G}}}=2\pi\cdot\left(\underline{\underline{S_{aux}}}^{-1}\right)^{T}\underline{v_{\mathcal{G}}}$
\end_inset


\end_layout

\begin_layout Standard
Metric matrix for this space: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\underline{\underline{M}}_{\mathcal{G}}=\left(\underline{\underline{K_{aux}}}\right)^{T}\cdot\underline{\underline{K_{aux}}}=\frac{2\pi}{ab\sin\gamma}\cdot\begin{pmatrix}b\sin\gamma & -b\cos\gamma\\
0 & a
\end{pmatrix}\cdot\frac{2\pi}{ab\sin\gamma}\cdot\begin{pmatrix}b\sin\gamma & 0\\
-b\cos\gamma & a
\end{pmatrix}=\left(\frac{2\pi}{ab\sin\gamma}\right)^{2}\cdot\begin{pmatrix}b^{2} & -ab\cos(\gamma)\\
-ab\cos(\gamma) & a^{2}
\end{pmatrix}
\]

\end_inset


\end_layout

