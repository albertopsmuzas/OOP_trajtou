# Compile options
F = ifort
CF = $(F) -cpp -I ../mod -module ../mod -gen-interfaces -c -O2 -traceback -CB -warn truncated_source
LF = $(F) -I ../mod -O2

# Where to find compiled but not yet linked binaries
vpath %.o ../bin
vpath %.a ../lib

# General rules
%.o : %.f90
ifeq ($(debugmode),on)
	$(CF) -DDEBUG -DINTEL $< -o ../bin/$@
else
	$(CF) -DINTEL $< -o ../bin/$@
endif
%.o : %.f
ifeq ($(debugmode),on)
	$(CF) -DDEBUG -DINTEL $< -o ../bin/$@
else
	$(CF) -DINTEL $< -o ../bin/$@
endif
